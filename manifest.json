{
    "manifest_version": 3,
    "name": "fytr",
    "version": "0.2.0",
    "description": "Filter youtube recommendations",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["scripts/content.js"],
            "run_at": "document_end"
        }
    ]
}