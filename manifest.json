{
    "manifest_version": 3,
    "name": "fytr",
    "version": "1.0",
    "description": "Filter youtube recommendations",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}